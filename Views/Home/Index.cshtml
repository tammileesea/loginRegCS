@{
    ViewData["Title"] = "Home Page";
}
@model User

<div>
    <h1>Register to this AMAZING site!!!</h1>
    <a href="/loginPage">Login</a>
    <form asp-action="Register" asp-controller="Home" method="post">
        <div class="form-group">
            <span asp-validation-for="FirstName"></span><br>
            <label asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName"><br>
        </div>
        <div class="form-group">
            <span asp-validation-for="LastName"></span><br>
            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName"><br>
        </div>
        <div class="form-group">
            <span asp-validation-for="Email"></span><br>
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email"><br>
        </div>
        <div class="form-group">
            <span asp-validation-for="Password"></span><br>
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password"><br>
        </div>
        <div class="form-group">
            <span asp-validation-for="pwConfirm"></span><br>
            <label asp-for="pwConfirm"></label>
            <input class="form-control" asp-for="pwConfirm"><br>
        </div>
        <button class="btn btn-primary">Register</button>
    </form>
</div>
